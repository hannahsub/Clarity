{
  "manifest_version": 3,
  "name": "Clarity",
  "description": "Block ChatGPT, Gemini, Claude & more. Focus timer with full-screen countdown, custom blocklist, and private on-device usage stats.",
  "version": "1.0.9",
  "author": "Hannah Subbaraman",

  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "assets/icon1.png",
      "32": "assets/icon1.png",
      "48": "assets/icon1.png"
    }
  },

  "background": { "service_worker": "background.js" },

  "permissions": [
    "declarativeNetRequest",
    "storage",
    "tabs",
    "windows",
    "idle",
    "alarms",
    "scripting"
  ],

  "host_permissions": ["<all_urls>"],

  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "static_rules",
        "enabled": true,
        "path": "rules_static.json"
      }
    ]
  },

  "content_scripts": [
  {
    "matches": ["http://*/*", "https://*/*"],
    "js": ["content/search_cleaner.js"],
    "run_at": "document_end"
  }
],

  "options_page": "options/options.html"
}